<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/HelloWorld"
            android:id="@+id/textView2" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"/>
    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendarView" android:visibility="visible"
    />
    <Button
            android:text="@string/btn_SetNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="sayHello" android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/textView2" android:layout_marginStart="22dp"/>
    <TextView
            android:text="@string/HelloWorld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"/>
    <Button
            android:text="@string/btn2_SetActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="goToSecondActivity" android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true"/>
    <Button
            android:text="@string/btn4_ShowToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" android:onClick="onShowToast"
            android:layout_alignBottom="@+id/textView" android:layout_toStartOf="@+id/textView2"/>
    <Button
            android:text="@string/btn5_ORIENTATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" android:onClick="onPositoin" android:layout_above="@+id/textView2"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>